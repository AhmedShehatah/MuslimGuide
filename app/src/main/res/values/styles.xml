<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    <style name="ImageStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="cardView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="btn_athkar_style">
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/btn_dims</item>
        <item name="android:layout_marginTop">@dimen/btn_dims</item>
        <item name="android:layout_marginRight">@dimen/btn_dims</item>
    </style>

</resources>
